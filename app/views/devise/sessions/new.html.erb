<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= content_tag(:div, flash[:error], :class => "alert-danger alert") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :class => "alert-info alert") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :class => "alert-info alert") if flash[:alert] %>
    <div class="form-group">
      <%= f.label :login %><br/>
      <%= f.text_field :login, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br/>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-default' %>
    </div>
<% end %>