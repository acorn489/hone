<!DOCTYPE html>
<html lang="en">
	<body class="boundaries">
		<%= render partial: "partials/navbar" %>
		<% if flash[:notice] %>
			<div class="alert-info alert"><%= flash[:notice] %></div>
		<% end %>
		<br><br><br>
		<div class="courses">
			<h3>Courses:</h3>
			<div class="row">
				<% @courses.each do |course| %>
					<div class="col-sm-4"><%= link_to course.title,{
						:controller => 'courses',
						:id => course.id,
						:action => 'students_show'},
						:method => :get,
						class: "btn btn-success" %></div>
				<% end %>
			</div>
		</div>
	</body>
</html>