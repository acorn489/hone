<div class="content">
	<div class="login-form form-horizontal">
		<%= form_tag(:action => 'attempt_login')do %>
			<div class="form-group">
				<%= label_tag :username, "Username:", class: 'control-label col-sm-2' %>
				<div class=" col-sm-10">
					<%= text_field_tag :username, nil, placeholder: 'Enter your username', 
						class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :password, "Password:", class: 'control-label col-sm-2' %>
				<div class="col-sm-10"><%= password_field_tag :password, nil, 
					placeholder: 'Enter Your password', class: 'form-control'  %>
				</div>
			</div>
			<div class="col-sm-offset-2 col-sm-10">
				<%= submit_tag "Login", class: 'btn btn-default' %>
			</div>
		<% end %>
	</div>
</div>