<h1>Developer Panel</h1>

<div class="container-fluid">
  <div class="kidDeveloperButtons btn-group" data-toggle="buttons">
    <label class="btn btn-primary active">
      <input type="radio" name="options" value="android" autocomplete="off" checked> Android
    </label>
    <label class="btn btn-primary">
      <input type="radio" name="options" value="developer" autocomplete="off"> iOS
    </label>
    <label class="btn btn-primary">
      <input type="radio" name="options" value="developer" autocomplete="off"> Web
    </label>
  </div>
  <div class="standardsTable"></div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= label_tag :title, "Title:" %>
      <%= text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Description:" %>
      <%= text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :store, "Link to store:" %>
      <%= text_field :link, class: 'form-control' %>
    </div>

    <%= submit_tag "Add Game", class: 'btn btn-primary' %>
<% end %>