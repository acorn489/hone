@import "bootstrap-sprockets";
@import "bootstrap";
.boundaries {
	width: 80%;
	margin-left: 120px;
	margin-top: 20px;
}
.login-form {
	margin: 100px 150px auto 150px;
}
.courses {
	margin-left: 350px;
}

/* ------------------ general ---------------------- */
body {
	margin: 0;
}

@font-face {
	font-family: "Pausenbrot-Regular";
	src: url('<%= asset_path("Pausenbrot-Regular.otf") %>') format("truetype");
}

* {
	font-family: Pausenbrot-Regular;
}

.horizontalLine {
	height: 3px;
}

.bg_greydark {
	background-color: #495052;
}

.bg_greydarker {
	background-color: #404547;
}

.transparent-red {
	background-color: #E67777;
	opacity: 0.8;
}

.gradient {
	background: linear-gradient(to right, #74cee4 0%,#66ce9c 16%,#edbf47 32%,#ec774b 49%,#74cee4 65%,#66ce9c 83%,#edbf47 100%);
}

.buttonLink {
	height: 30px;
	color: #fff;
	margin: 10px 20px 10px 0px;
	border-radius: 5px;
	padding: 5px 10px;
	text-decoration: none;
}

.buttonOrange {
	box-shadow: 0px 4px 0px 0px #EA7549;
	background-color: #ec774b;
}

.buttonDark {
	box-shadow: 0px 4px 0px 0px #353b3d;
	background-color: #404547;
}


/* ------------------ HEADER ---------------------- */

nav {
	width: 95%;
	height: 70px;
	line-height: 70px;
	position: fixed;
	top: 0;
	left: 2.5%;
	background-color: #f9f9f9;
	z-index: 1;
	box-shadow: 0 4px 0 0 #F0F0F0;
	border-bottom-right-radius: 8px;
	border-bottom-left-radius: 8px;
	background-image: url(<%= asset_path 'kidmooc.svg' %>);
	background-repeat: no-repeat;
	background-position: left;
	background-size: contain;
}

nav .title {
	margin-left: 120px;
	color: #888;
	font-size: 30px;
	margin-top: 0;
	margin-bottom: 0;
	float: left;
}

nav .title a:link, nav .title a:visited, nav .title a:hover, nav .title a:active {
	color: black;
	text-decoration: none;
}

#navList {
	text-align: center;
	margin: 0;
	padding: 0;
}

#navList li {
	display: inline-block;
}

.navLink {
	text-decoration: none;
	color: #888;
	font-size: 20px;
}

.navLink:after {
	content: '\2022';
	vertical-align: middle;
	font-size: 25px;
	margin: 0px 20px;
}

#navList li:first-child a:after {
	color: #ec774b;
}

#navList li:nth-child(2) a:after {
	color: #74cee4;
}

#navList li:nth-child(3) a:after {
	color: #66ce9c;
}

#navList:last-child li:last-child {
	margin-right: 20px;
}

#navList:last-child li:last-child a:after{
	display: none;
}

.nav-right {
	float: right;
	width: 10%;
}

.nav-left {
	float: left;
	width: 90%;
}


/* ------------------ content ---------------------- */
.container {margin-top: 116px; margin-bottom: 116px}

/* ------------------ header --- */
.headImage .imgContainer {
	max-height: 250px;
	overflow: hidden;
}

.headImage .imgContainer img {
	width: 100%;
	opacity: 0.5;
}

.progress {
	background-color: transparent;
	width: 50%;
	height: 20px;
	border: 3px solid #5BC3F3;
	border-radius: 10px;
	text-align: left;
}

.progress-style {
	height: 20px;
	background-color: #94D9F9;
	border-radius: 7px;
	vertical-align: top !important;
}

.progress .progress-grade {
	width: 40%;
}

/* ------------------ course --- */

.courseRowHeader {
	height: 55px;
	line-height: 55px;
	margin: auto;
	max-width: 1135px;
}

.courseRowHeader h1 {
	margin: 0;
}

#sectionCourse {
	color: #495052;
	padding: 20px 50px;
}

.sectionTitle {
	font-size: 2em;
}


.course {
	width: 200px;
	height: 280px;
	box-shadow: 1px 1px 1px #888;
}

.courseRowBody li a {
	text-decoration: none;
}

#yourCourseList {
	list-style: none;
	padding: 0;
}

#yourCourseList li:first-child {
	margin-left: 0px;
}

.courseRowBody li {
	display: inline-block;
	margin-left: 30px;
	width: 200px !important;
}

.carousel-list {
	margin: auto;
	max-width: 1135px;
}

.status {
	position: absolute;
	width: 200px;
}

.status div {
	display: inline-block;
	vertical-align: middle;
}

.gradeContainer {
	width: 30px;
}

.gradeContainer img {
	width: 100%;
}

.mathIcon {
	height: 100%;
	background: url(http://www.nicdarkthemes.com/themes/baby-kids/wp/demo/wp-content/uploads/2015/01/hand-color.jpg);
	background-size: cover;
}

.englishIcon {
	height: 100%;
	background: url(http://www.nicdarkthemes.com/themes/baby-kids/wp/demo/wp-content/uploads/2015/01/grass.jpg);
	background-size: cover;
}

.color-box {
	width: 200px;
	height: 200px;
	text-align: center;
}

.details {
	height: 80px;
	text-align: center;
}

.details .title {
	width: 100%;
	height: 40px;
	color: #888;
	line-height: 40px;
	font-size: 20px;
}

.details .progress {
	margin: auto;
}

.progress .progress-math {
	width: 70%;
}

.lock {
	width: 70px;
	height: 70px;
	border-radius: 50px;
	text-align: center;
	margin-top: 30%;
	display: inline-block;
	transition: all .5s ease;
	background-size: 100% 100%;
}

.lock img {
	width: 50%;
	margin-top: 25%;
}

.lock:hover {
	width: 90px;
	height: 90px;
	margin-top: 25%;
}

.caroufredsel_wrapper {
	height: 363px !important;
}

.carousel-control {
	float: right;
	margin: auto;
	width: 120px;
}

.control {
	width: 50px;
	height: 50px;
	border-radius: 50px;
	border: 2px solid #888;
	color: #888;
	font-size: 2em;
	text-decoration: none;
	text-align: center;
	line-height: 50px;
}

.prev {
	float: left;
}

.next {
	float: right;
}

/* ------------------ footer ---------------------- */
.subfooter {
	height: 200px;
	color: white;
	padding: 10px;
}

.subfooter .title {
	margin: 0;
	text-align: center;
	font-size: 40px;
}

.honeIcon {
	text-align: center;
}

.honeIcon img{
	width: 120px;
}

footer {
	height: 100px;
	color: white;
	line-height: 100px;
	padding-left: 50px;
	background-image: url(http://www.nicdarkthemes.com/themes/baby-kids/wp/demo/wp-content/themes/babykids/img/copyright.jpg);
	background-repeat: no-repeat;
	background-position: left;
	background-size: contain;
}

#copyright {
	margin-top: 0;
}
