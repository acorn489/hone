/*= require_tree .*/
  @import "bootstrap-sprockets";
  @import "bootstrap";

  /* User Agent Stylesheet */

  body {
    margin: 0;
  }

  * {
    font-family: Pausenbrot-Regular;
  }

  .container {
    margin-top: 10%;
  }

  .bg_greydark {
    background-color: #495052;
  }

  .bg_greydarker {
    background-color: #404547;
  }

  .actions {
    float: right;
  }

  .headImage .imgContainer {
    max-height: 250px;
    overflow: hidden;
  }

  .headImage .imgContainer img {
    width: 100%;
    opacity: 0.5;
  }

  h1, h2, h3, h4, h5 {
    text-align: center;
  }

/* Fonts */

@font-face {
	font-family: "Pausenbrot-Regular";
	src: url('<%= asset_path("Pausenbrot-Regular.otf") %>') format("truetype");
}
